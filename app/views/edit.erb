<form action="/recipes/<%= @recipe.id %>" method='POST'>
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <label>Name:</label> <input="text" name="name" value="<%= @recipe.name %>">
  <label>Ingredients:</label> <input="text" name="ingredients" value="<%= @recipe.ingredients %>">
  <label>Cook Time: </label> <input="text" name="cook_time" value="<%= @recipe.cook_time %>">
  <input type="submit" name="submit" value="submit">
</form>